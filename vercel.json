{
  "builds": [
    {
      "src": "fusion/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python 3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": "staticfiles_build" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "fusion/wsgi.py"
    },
    {
      "src": "/staticfiles/(.*)",
      "dest": "/staticfiles/$1"
    }
  ],
  "outputDirectory": "staticfiles_build"
}

